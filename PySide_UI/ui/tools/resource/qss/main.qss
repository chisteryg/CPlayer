/*模式按钮*/
QPushButton[page]{
	border: 2px solid #ca8f00;
	border-radius: 15px;
}
QPushButton[page]:hover{
	font-size: 17px;
	background-color: #ca8f00;
}
QPushButton[page]:checked{
	font-size: 17px;
	background-color: #ca8f00;
	border: 2px solid #ffffff;
}
/*模式按钮*/

/*垂直滚动条样式*/
QScrollBar::add-line, QScrollBar::sub-line {
    width: 0;  /* 隐藏水平滚动条的箭头 */
    height: 0; /* 隐藏垂直滚动条的箭头 */
}
QScrollBar::add-page, QScrollBar::sub-page {
    /*background: transparent;*/
    background: rgba(255, 255, 255, 0.5);
	border: 0px;
	border-radius: 2px;
	padding-top: 2px;
    padding-bottom: 2px;
}
QScrollBar{
    width: 10px;
    border: 0px;
    border-radius: 5px;
	padding: 2px;
}
QScrollBar::handle{
    width: 4px;
    border-radius: 2px;
    background-color: #b17a00;
}
QScrollBar::handle:hover{
    background-color: #835302;
}
QScrollBar:vertical {
    border: none;          /* 去除滚动条整体边框 */
    background: transparent;  /* 背景透明（可选） */
}
QScrollArea .QWidget{
	border: none;
}
QScrollArea{
	padding-top: 5px;
	padding-bottom: 5px;
}

