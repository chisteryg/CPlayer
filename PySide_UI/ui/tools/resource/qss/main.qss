/*进度滑动条*/
QSlider#music_time_slider::groove
{
	background:white;
	height:6px;
	border-radius: 3px;
}

QSlider#music_time_slider::sub-page
{
	background-color: #b17a00;
	border-radius: 3px;
}

QSlider#music_time_slider::add-page
{
	background-color: #da9f53;
	border-radius: 3px;
}

QSlider#music_time_slider::handle
{
	height: 10px;
	width: 10px;
	border-radius: 5px;
	background: #835302;
	margin-top: -2px;
	margin-bottom: -2px;
}
QSlider#music_time_slider::handle:hover
{
	background: white;
}
/*音量滑动条*/
QSlider#volume_slider::groove
{
	background:white;
	height:4px;
	border-radius: 2px;
}

QSlider#volume_slider::sub-page
{
	background-color: #e52d28;
	border-radius: 2px;
}

QSlider#volume_slider::add-page
{
	background-color: #df9a8d;
	border-radius: 2px;
}

QSlider#volume_slider::handle
{
	height: 8px;
	width: 8px;
	border-radius: 4px;
	background: #a70000;
	margin-top: -2px;
	margin-bottom: -2px;
}
QSlider#volume_slider::handle:hover
{
	background: white;
}

